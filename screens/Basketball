import 'package:flutter/material.dart';
import '../widgets/fondo_tricolor.dart';
import '../widgets/deporte_item.dart';
import 'equipos_nba_page.dart';

class BasketballPage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return FondoTricolor(
      child: Scaffold(
        backgroundColor: Colors.transparent,
        body: SafeArea(
          child: Column(
            children: [
              Padding(
                padding: EdgeInsets.all(24),
                child: Row(
                  children: [
                    IconButton(
                      onPressed: () => Navigator.pop(context),
                      icon:
                          Icon(Icons.arrow_back, color: Colors.white, size: 28),
                    ),
                    Expanded(
                      child: Text(
                        'Baloncesto',
                        style: TextStyle(
                          fontSize: 28,
                          fontWeight: FontWeight.bold,
                          color: Colors.white,
                        ),
                        textAlign: TextAlign.center,
                      ),
                    ),
                    SizedBox(width: 48),
                  ],
                ),
              ),
              Expanded(
                child: Container(
                  margin: EdgeInsets.only(top: 20),
                  decoration: BoxDecoration(
                    color: Colors.white.withOpacity(0.95),
                    borderRadius: BorderRadius.only(
                      topLeft: Radius.circular(30),
                      topRight: Radius.circular(30),
                    ),
                  ),
                  child: ListView(
                    padding: EdgeInsets.all(24),
                    children: [
                      SizedBox(height: 20),
                      DeporteItem(
                        icon: Icons.sports_basketball,
                        nombre: 'LNB',
                        descripcion: 'Liga Nacional de Baloncesto',
                        color: Color(0xFFFF6F00),
                        onTap: () {
                          ScaffoldMessenger.of(context).showSnackBar(
                            SnackBar(
                              content:
                                  Text('Esta sección está en mantenimiento.'),
                              duration: Duration(seconds: 2),
                            ),
                          );
                        },
                      ),
                      SizedBox(height: 16),
                      DeporteItem(
                        icon: Icons.sports_basketball,
                        nombre: 'NBA',
                        descripcion: 'National Basketball Association',
                        color: Color(0xFFE91E63),
                        onTap: () => Navigator.push(
                          context,
                          MaterialPageRoute(
                              builder: (context) => EquiposNbaPage()),
                        ),
                      ),
                    ],
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
